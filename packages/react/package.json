{
  "name": "@git-diff-view/react",
  "description": "@git-diff-view/react",
  "author": "MrWangJustToDo",
  "license": "MIT",
  "version": "0.0.39",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "src",
    "dist",
    "styles",
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "gen:type": "dts-bundle-generator -o index.d.ts dist/types/index.d.ts",
    "gen:css1": "postcss src/tailwind.css -o dist/css/diff-view.css",
    "gen:css2": "postcss src/tailwind.css -o dist/css/diff-view-pure.css",
    "gen:css": "npm run gen:css1 && npm run gen:css2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrWangJustToDo/git-diff-view.git",
    "directory": "packages/react"
  },
  "homepage": "https://mrwangjusttodo.github.io/git-diff-view",
  "exports": {
    ".": {
      "require": "./index.js",
      "types": "./index.d.ts",
      "import": "./dist/esm/index.mjs"
    },
    "./styles/*": "./dist/css/*",
    "./package.json": "./package.json"
  },
  "buildOptions": [
    {
      "input": "./src/index.ts",
      "output": [
        {
          "dir": "./dist",
          "entryFileNames": "esm/index.mjs",
          "banner": "'use client';",
          "format": "esm",
          "sourcemap": true
        }
      ]
    },
    {
      "input": "./src/index.ts",
      "output": [
        {
          "dir": "./dist",
          "entryFileNames": "cjs/index.js",
          "format": "cjs",
          "type": true,
          "banner": "'use client';",
          "multiple": true,
          "sourcemap": true
        }
      ]
    }
  ],
  "keywords": [
    "diff component",
    "react diff component"
  ],
  "dependencies": {
    "@git-diff-view/core": "^0.0.39",
    "@types/hast": "^3.0.0",
    "fast-diff": "^1.3.0",
    "highlight.js": "^11.11.0",
    "lowlight": "^3.3.0",
    "reactivity-store": "^0.3.12",
    "use-sync-external-store": "^1.6.0"
  },
  "devDependencies": {
    "@types/use-sync-external-store": "^1.5.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "tailwindcss": "^3.4.18"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  }
}
