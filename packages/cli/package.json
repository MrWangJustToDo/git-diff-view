{
  "name": "@git-diff-view/cli",
  "description": "@git-diff-view/cli",
  "author": "MrWangJustToDo",
  "license": "MIT",
  "version": "0.0.9",
  "main": "index.mjs",
  "type": "module",
  "types": "index.d.ts",
  "files": [
    "src",
    "dist",
    "index.mjs",
    "index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrWangJustToDo/git-diff-view.git",
    "directory": "packages/cli"
  },
  "scripts": {
    "dev": "DEV=true node ./test/index.mjs",
    "gen:color": "node ./gen.mjs",
    "gen:type": "dts-bundle-generator -o index.d.ts dist/types/index.d.ts"
  },
  "homepage": "https://mrwangjusttodo.github.io/git-diff-view",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.mjs"
    },
    "./package.json": "./package.json"
  },
  "buildOptions": [
    {
      "input": "./src/index.ts",
      "output": [
        {
          "dir": "./dist",
          "entryFileNames": "esm/index.mjs",
          "format": "esm",
          "type": true,
          "sourcemap": true
        }
      ]
    }
  ],
  "keywords": [
    "diff component",
    "cli diff component"
  ],
  "dependencies": {
    "@git-diff-view/core": "^0.0.38",
    "@types/hast": "^3.0.0",
    "chalk": "^5.6.2",
    "highlight.js": "^11.11.0",
    "lowlight": "^3.3.0",
    "fast-diff": "^1.3.0",
    "reactivity-store": "^0.3.12",
    "string-width": "^7.0.0",
    "use-sync-external-store": "^1.6.0"
  },
  "devDependencies": {
    "@my-react/react": "^0.3.22",
    "@my-react/react-terminal": "^0.0.16",
    "@types/react": "^19.2.2"
  },
  "peerDependencies": {
    "react": "^19.2.0",
    "ink": "^6.1.0"
  }
}