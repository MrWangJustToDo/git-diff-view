{
	"name": "@git-diff-view/svelte",
	"version": "0.0.5",
	"scripts": {
		"dev": "vite dev",
		"build": "npm run prepack",
		"preview": "vite preview",
		"prepack": "svelte-kit sync && svelte-package",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"gen:css1": "postcss src/tailwind.css -o dist/css/diff-view.css",
    "gen:css2": "postcss src/tailwind_pure.css -o dist/css/diff-view-pure.css",
    "gen:css": "npm run gen:css1 && npm run gen:css2"
	},
	"files": [
		"dist",
		"styles",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"import": "./dist/index.js"
		},
		"./styles/*": "./dist/css/*",
		"./package.json": "./package.json"
	},
	"dependencies": {
		"@git-diff-view/core": "^0.0.32",
    "@types/hast": "^3.0.0",
    "highlight.js": "^11.11.0",
    "lowlight": "^3.3.0",
    "fast-diff": "^1.3.0"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.37.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"autoprefixer": "^10.4.21",
		"eslint": "^9.37.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.0.0",
    "postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.3.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.18",
		"typescript-eslint": "^8.46.1",
		"vite": "^6.2.6",
		"vite-plugin-devtools-json": "^1.0.0"
	},
	"keywords": [
		"diff component",
    "svelte diff component"
	]
}
